{% extends 'base.html.twig' %}

{% block title %}Create Item{% endblock %}

{% block body %}
  <style>
    .wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }

    .wrapper code {
      background: #F5F5F5;
      padding: 2px 6px;
    }
  </style>

  <div class="wrapper">
    <h1>Item</h1>

    {{ form_start(itemForm) }}
    {{ form_row(itemForm.code) }}
    {{ form_row(itemForm.name) }}
    {{ form_row(itemForm.price) }}


    <button class="btn">Save</button>
    {{ form_end(itemForm) }}
  </div>
{% endblock %}
